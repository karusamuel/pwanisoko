<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inMesaage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/their_message"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/message_user_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="fdsfsddfdf"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/message_text_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_user_in"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:text="dsfsdfds"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_time_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text_in"
        android:text="sdfsdfsd"
        android:textColor="@android:color/holo_blue_light" />
</RelativeLayout>